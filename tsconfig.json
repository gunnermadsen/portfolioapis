{
    "compileOnSave": false,
    
    "exclude": ["dist", "webpack.config.js", "temp"],
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": true,
        "watch": false,
        "skipLibCheck": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "baseUrl": "./",
        "types": [
            "node"
        ]
    }
    
}